{
    "AppBase": {
        "EnvName": "",
        "VirtualHost": {
            "BasePath": "ordermanagement"
        },
        "ConnectionStrings": {
            "db": ""
        },
        "AllowedHosts": "*"
    },
    "Swagger": {
        "Enabled": true,
        "Title": "Order Management API",
        "Description": "An ASP.NET Core Web API for managing Orders."
    },
    "HttpPort": 80,
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Information",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "OutputTemplate": "{Timestamp:o} [{Level}] {Message}{NewLine}{Exception}"
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
        "Properties": {
            "Application": "assetmetadataenricher"
        }
    }
}
